@inherits LayoutComponentBase

<div class="main-layout">
    <aside class="sidebar @(sidebarCollapsed ? "collapsed" : "")">
        <div class="sidebar-header">
            @if (!sidebarCollapsed)
            {
                <img src="logo.png" alt="Logo" class="logo" />
                <div>
                    <div class="brand-title">Artha Shiksha</div>
                    <div class="brand-subtitle">AI for e-Learning</div>
                </div>
            }
            <button class="sidebar-toggle" @onclick="ToggleSidebar">
                <span class="material-icons">menu</span>
            </button>
        </div>
        <nav class="sidebar-nav">
            <ul>
                <li class="active">
                    <span class="material-icons">dashboard</span>
                    @if (!sidebarCollapsed) { <span>Dashboard</span> }
                </li>
                <li>
                    <span class="material-icons">school</span>
                    @if (!sidebarCollapsed) { <span>Program Management</span> }
                </li>
                <li>
                    <span class="material-icons">apartment</span>
                    @if (!sidebarCollapsed) { <span>Department Management</span> }
                </li>
                <li>
                    <span class="material-icons">account_tree</span>
                    @if (!sidebarCollapsed) { <span>Hierarchy Management</span> }
                </li>
                <li>
                    <span class="material-icons">supervisor_account</span>
                    @if (!sidebarCollapsed) { <span>Role Management</span> }
                </li>
                <li>
                    <span class="material-icons">people</span>
                    @if (!sidebarCollapsed) { <span>Faculty Management</span> }
                </li>
                <li>
                    <span class="material-icons">menu_book</span>
                    @if (!sidebarCollapsed) { <span>Course Management</span> }
                </li>
                <li>
                    <span class="material-icons">person</span>
                    @if (!sidebarCollapsed) { <span>Student Data Management</span> }
                </li>
                <li>
                    <span class="material-icons">layers</span>
                    @if (!sidebarCollapsed) { <span>Batch Management</span> }
                </li>
                <li>
                    <span class="material-icons">event</span>
                    @if (!sidebarCollapsed) { <span>Timetable Management</span> }
                </li>
            </ul>
        </nav>
        <div class="sidebar-footer">
            @if (!sidebarCollapsed)
            {
                <div class="sidebar-footer-section">Notifications</div>
                <div class="sidebar-footer-section">Community &amp; Support</div>
                <div class="sidebar-user">
                    <img src="avatar.png" alt="User" class="user-avatar" />
                    <div>
                        <div class="user-name">Jessica Pearson</div>
                        <div class="user-email">jessica.pearson@phyku.com</div>
                    </div>
                    <span class="material-icons logout-icon">logout</span>
                </div>
            }
        </div>
    </aside>
    <main class="main-content">
        @Body
    </main>
    <div class="feedback-tab">Feedback</div>
</div>

@code {
    private bool sidebarCollapsed = false;
    private void ToggleSidebar() => sidebarCollapsed = !sidebarCollapsed;
}

<style>
.main-layout {
    display: flex;
    height: 100vh;
    width: 100vw;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
    overflow: hidden;
}
.sidebar {
    width: 260px;
    min-width: 260px;
    height: 100vh;
    background: #fff;
    border-right: 1.5px solid #e5e7eb;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow: hidden;
    transition: width 0.2s;
}
.sidebar.collapsed {
    width: 64px;
    min-width: 64px;
}
.sidebar-header {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 16px 20px 16px 20px;
}
.sidebar.collapsed .sidebar-header {
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 0;
    padding: 12px 0 12px 0;
}
.sidebar.collapsed .logo,
.sidebar.collapsed .brand-title,
.sidebar.collapsed .brand-subtitle {
    display: none !important;
}
.sidebar-toggle {
    background: none;
    border: none;
    cursor: pointer;
    margin-left: auto;
}
.sidebar.collapsed .sidebar-toggle {
    margin: 0 auto 12px auto;
}
.sidebar-nav {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
}
.sidebar-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
}
.sidebar-nav li {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px 24px;
    color: #22223b;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 6px;
    margin: 0 8px;
    transition: background 0.2s, color 0.2s;
}
.sidebar.collapsed .sidebar-nav li {
    justify-content: center;
    padding: 12px 0;
    gap: 0;
}
.sidebar.collapsed .sidebar-nav li span:not(.material-icons) {
    display: none;
}
.sidebar-nav li.active, .sidebar-nav li:hover {
    background: #f5f7fa;
    color: #4f7df3;
    border: 1.5px solid #4f7df3;
}
.sidebar-footer {
    padding: 16px 20px;
    border-top: 1.5px solid #e5e7eb;
    transition: padding 0.2s;
}
.sidebar.collapsed .sidebar-footer {
    padding: 0;
}
.sidebar-user {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-top: 16px;
}
.user-avatar {
    width: 38px;
    height: 38px;
    border-radius: 50%;
    background: #e0e7ff;
}
.user-name {
    font-weight: 600;
    font-size: 1rem;
    color: #22223b;
}
.user-email {
    font-size: 0.85rem;
    color: #6b7280;
}
.logout-icon {
    margin-left: auto;
    color: #4f7df3;
    cursor: pointer;
}
.main-content {
    flex: 1;
    height: 100vh;
    overflow-y: auto;
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0;
}
.feedback-tab {
    position: fixed;
    right: 0;
    top: 50%;
    transform: translateY(-50%) rotate(-90deg);
    background: #fff;
    color: #4f7df3;
    border: 1.5px solid #e5e7eb;
    border-radius: 6px 6px 0 0;
    padding: 6px 18px;
    font-size: 0.95rem;
    cursor: pointer;
    z-index: 100;
    box-shadow: 0 2px 8px rgba(79, 125, 243, 0.08);
}
</style>