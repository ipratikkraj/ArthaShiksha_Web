@page "/Program-management"

@using System.ComponentModel.DataAnnotations

<div class="program-management-bg">
    <div class="program-management-center">
        <div class="program-empty-card">
            <img src="images/empty-program.svg" alt="No Program" class="program-empty-img" />
            <div class="program-empty-title">No Program added yet!</div>
            <div class="program-empty-desc">
                Add faculties to manage teaching, courses, and assign departments!
            </div>
            <div class="program-empty-actions">
                <button class="btn btn-primary" @onclick="ShowAddProgramModal">
                    <span class="material-icons">add</span>
                    Add New Program
                </button>
                <button class="btn btn-outline">
                    <span class="material-icons">cloud_upload</span>
                    Bulk Upload
                </button>
            </div>
        </div>
    </div>
</div>

@if (showAddProgramModal)
{
    <div class="modal-backdrop" @onclick="CloseAddProgramModal"></div>
    <div class="modal-container">
        <div class="modal-header">
            <span>Add New Program</span>
            <button class="modal-close" @onclick="CloseAddProgramModal">
                <span class="material-icons">close</span>
            </button>
        </div>
        <EditForm Model="@programModel" OnValidSubmit="SaveProgram">
            <div class="modal-body">
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>Program Name <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="programModel.Name" />
                    </div>
                    <div class="modal-form-group">
                        <label>Program ID/Code <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="programModel.Code" />
                    </div>
                </div>
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>Duration <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="programModel.Duration">
                            <option value="">Select</option>
                            <option>3 Year's/6 Semesters</option>
                            <option>2 Year's/4 Semesters</option>
                        </InputSelect>
                    </div>
                    <div class="modal-form-group">
                        <label>Level <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="programModel.Level">
                            <option value="">Select</option>
                            <option>Under Graduate</option>
                            <option>Post Graduate</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>University/Institute <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="programModel.University">
                            <option value="">Select</option>
                            <option>Narayana Institute of Technology</option>
                            <option>Other University</option>
                        </InputSelect>
                    </div>
                    <div class="modal-form-group">
                        <label>Program Session <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="programModel.Session" placeholder="2025-2028" />
                    </div>
                </div>
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>Cycle Type <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="programModel.CycleType">
                            <option value="">Select</option>
                            <option>Semester</option>
                            <option>Year</option>
                        </InputSelect>
                    </div>
                    <div class="modal-form-group">
                        <label>Cycle Duration Month <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="programModel.CycleDurationMonth" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary modal-save-btn">Save</button>
            </div>
        </EditForm>
    </div>
}

@code {
    private bool showAddProgramModal = false;

    private ProgramModel programModel = new();

    private void ShowAddProgramModal()
    {
        showAddProgramModal = true;
    }

    private void CloseAddProgramModal()
    {
        showAddProgramModal = false;
        programModel = new();
    }

    private void SaveProgram()
    {
        // Save logic here
        showAddProgramModal = false;
    }

    public class ProgramModel
    {
        [Required]
        public string Name { get; set; }
        [Required]
        public string Code { get; set; }
        [Required]
        public string Duration { get; set; }
        [Required]
        public string Level { get; set; }
        [Required]
        public string University { get; set; }
        [Required]
        public string Session { get; set; }
        [Required]
        public string CycleType { get; set; }
        [Required]
        public string CycleDurationMonth { get; set; }
    }
}

