    .department-modal {
        min-width: 98vw;
        max-width: 98vw;
        padding: 0;
    }
    .modal-header, .modal-body, .modal-footer {
        padding-left: 12px;
        padding-right: 12px;
    }
    .modal-form-row {
        flex-direction: column;
        gap: 0;
    }
}
</style>
