@page "/department-management"
@using System.ComponentModel.DataAnnotations

<div class="department-management-bg">
    <div class="department-management-center">
        <div class="department-empty-card">
            <img src="images/empty-department.svg" alt="No Department" class="department-empty-img" />
            <div class="department-empty-title">No Department added yet!</div>
            <div class="department-empty-desc">
                Let’s get started by creating your first department. Connect your department, add content or let AI create
                a starter pack and take a quick tour of your new teaching space.
            </div>
            <div class="department-empty-actions">
                <button class="btn btn-primary" @onclick="ShowAddDepartmentModal">
                    <span class="material-icons">add</span>
                    Add New Department
                </button>
                <button class="btn btn-outline">
                    <span class="material-icons">cloud_upload</span>
                    Bulk Upload
                </button>
            </div>
        </div>
    </div>
</div>

@if (showAddDepartmentModal)
{
    <div class="modal-backdrop" @onclick="CloseAddDepartmentModal"></div>
    <div class="modal-container department-modal">
        <div class="modal-header">
            <span>Add New Department</span>
            <button class="modal-close" @onclick="CloseAddDepartmentModal">
                <span class="material-icons">close</span>
            </button>
        </div>
        <EditForm Model="@departmentModel" OnValidSubmit="SaveDepartment">
            <div class="modal-body">
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>Department Name <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="departmentModel.Name" placeholder="e.g. Computer Science & Engineering" />
                    </div>
                    <div class="modal-form-group">
                        <label>Department Code <span class="required">*</span></label>
                        <InputText class="modal-input" @bind-Value="departmentModel.Code" placeholder="e.g. E101" />
                    </div>
                </div>
                <div class="modal-form-row">
                    <div class="modal-form-group">
                        <label>Assigned HOD <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="departmentModel.HOD">
                            <option value="">Select HOD</option>
                            <option>Dr. Heena Parikar</option>
                            <option>Dr. John Doe</option>
                            <option>Dr. Jane Smith</option>
                        </InputSelect>
                    </div>
                    <div class="modal-form-group">
                        <label>Selected Program <span class="required">*</span></label>
                        <InputSelect class="modal-input" @bind-Value="departmentModel.Program">
                            <option value="">Select Program</option>
                            <option>Engineering</option>
                            <option>Science</option>
                            <option>Arts</option>
                        </InputSelect>
                    </div>
                </div>
                <div class="modal-form-row">
                    <div class="modal-form-group modal-form-group-full">
                        <label>Department Description</label>
                        <InputTextArea class="modal-input" @bind-Value="departmentModel.Description" rows="2" placeholder="Department Description" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary modal-save-btn">Save</button>
            </div>
        </EditForm>
    </div>
}

@code {
    private bool showAddDepartmentModal = false;

    private DepartmentModel departmentModel = new();

    private void ShowAddDepartmentModal()
    {
        showAddDepartmentModal = true;
    }

    private void CloseAddDepartmentModal()
    {
        showAddDepartmentModal = false;
        departmentModel = new();
    }

    private void SaveDepartment()
    {
        // Save logic here
        showAddDepartmentModal = false;
    }

    public class DepartmentModel
    {
        [Required]
        public string Name { get; set; }
        [Required]
        public string Code { get; set; }
        [Required]
        public string HOD { get; set; }
        [Required]
        public string Program { get; set; }
        public string Description { get; set; }
    }
}

