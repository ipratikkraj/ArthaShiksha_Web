@page "/student-management"

<div class="student-management-bg">
    <div class="student-management-center">
        <div class="student-empty-card">
            <img src="images/empty-student.svg" alt="No Students" class="student-empty-img" />
            <div class="student-empty-title">No students added yet!</div>
            <div class="student-empty-desc">
                Start uploading or manually filling student detail and assign them batch, course, program, &amp; Department to start tracking student's learning.
            </div>
            <div class="student-empty-actions">
                <button class="btn btn-blue" @onclick="ShowAddStudentModal">
                    <span class="material-icons">add</span>
                    Add New Student
                </button>
                <button class="btn btn-outline">
                    <span class="material-icons">cloud_upload</span>
                    Bulk Upload
                </button>
            </div>
        </div>
    </div>
</div>

@if (showAddStudentModal)
{
    <div class="modal-backdrop">
        <div class="modal-dialog">
            <div class="modal-header">
                <span>Add New Student</span>
                <button class="close-btn" @onclick="CloseAddStudentModal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Student Full Name *</label>
                        <input class="modal-input" />
                    </div>
                    <div class="modal-field">
                        <label>Enrollment Number *</label>
                        <input class="modal-input" />
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Assigned Program *</label>
                        <select class="modal-input">
                            <option>B. Tech CSE</option>
                            <option>B. Tech ECE</option>
                        </select>
                    </div>
                    <div class="modal-field">
                        <label>Assigned Department *</label>
                        <select class="modal-input">
                            <option>Engineering</option>
                            <option>Science</option>
                        </select>
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Email *</label>
                        <input class="modal-input" />
                    </div>
                    <div class="modal-field">
                        <label>Selected Gender</label>
                        <select class="modal-input">
                            <option>Male</option>
                            <option>Female</option>
                            <option>Other</option>
                        </select>
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Assign Mentor</label>
                        <select class="modal-input">
                            <option>Dr. AK Singh</option>
                        </select>
                    </div>
                    <div class="modal-field">
                        <label>Assign Courses</label>
                        <select class="modal-input">
                            <option>Assign Courses</option>
                        </select>
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Assign Batch</label>
                        <select class="modal-input">
                            <option>2025 - 2029</option>
                        </select>
                    </div>
                    <div class="modal-field">
                        <label>Date of Birth Date</label>
                        <input type="date" class="modal-input" />
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-field">
                        <label>Contact Number</label>
                        <input class="modal-input" />
                    </div>
                    <div class="modal-field" style="display: flex; align-items: flex-end;">
                        <label style="width:100%;">Current Status</label>
                        <label class="switch" style="margin-left:12px;">
                            <input type="checkbox" />
                            <span class="slider"></span>
                        </label>
                    </div>
                </div>
                <div class="modal-row">
                    <div class="modal-upload">
                        <span class="material-icons" style="font-size:32px;color:#4f7df3;">cloud_upload</span>
                        <div>
                            <span style="color:#4f7df3;cursor:pointer;">Upload Profile or Drag & Drop</span>
                            <div style="font-size:12px;color:#8a8a99;">Formats: JPG, PNG, SVG</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-blue" style="width:100px;">Save</button>
            </div>
        </div>
    </div>
}

<style>
.student-management-bg {
    min-height: 100vh;
    width: 100%;
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf1 100%);
    display: flex;
    flex-direction: column;
    align-items: stretch;
    justify-content: flex-start;
}

.student-management-center {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: flex-start;
    padding: 32px 0 0 0;
}

.student-empty-card {
    width: 100%;
    max-width: 1700px;
    min-width: 600px;
    min-height: 350px;
    background: #fff;
    border: 1.5px solid #dbeafe;
    border-radius: 10px;
    margin: 32px auto 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40px 0 40px 0;
    box-shadow: 0 2px 8px rgba(79, 125, 243, 0.04);
}

.student-empty-img {
    width: 220px;
    margin-bottom: 18px;
}

.student-empty-title {
    font-size: 1.35rem;
    font-weight: 700;
    color: #22223b;
    margin-bottom: 8px;
    text-align: center;
    margin-top: 8px;
}

.student-empty-desc {
    font-size: 1rem;
    color: #8a8a99;
    margin-bottom: 28px;
    text-align: center;
    max-width: 600px;
}

.student-empty-actions {
    display: flex;
    gap: 16px;
    margin-top: 8px;
}

.btn {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: 1rem;
    font-weight: 500;
    border-radius: 6px;
    padding: 8px 20px;
    border: none;
    cursor: pointer;
    transition: background 0.2s, color 0.2s, border 0.2s;
    outline: none;
}

.btn-blue {
    background: #4f7df3;
    color: #fff;
    border: 1.5px solid #4f7df3;
}

.btn-blue:hover {
    background: #3b5fc9;
    border-color: #3b5fc9;
}

.btn-outline {
    background: #fff;
    color: #4f7df3;
    border: 1.5px solid #4f7df3;
}

.btn-outline:hover {
    background: #f5f7fa;
    color: #3b5fc9;
    border-color: #3b5fc9;
}

.material-icons {
    font-size: 20px;
    vertical-align: middle;
}

.modal-backdrop {
    position: fixed;
    top: 0; left: 0; right: 0; bottom: 0;
    background: rgba(34, 34, 59, 0.15);
    z-index: 5000; /* Increased z-index */
    display: flex;
    align-items: center;
    justify-content: center;
    overflow-y: auto;
    pointer-events: auto !important;
}

.modal-dialog {
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 2px 16px rgba(34,34,59,0.10);
    width: 800px;
    max-width: 95vw;
    max-height: 90vh;
    padding: 0;
    display: flex;
    flex-direction: column;
    overflow: hidden;
    z-index: 5100; /* Ensure above backdrop */
    pointer-events: auto !important;
}

.modal-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 32px 40px 0 40px;
    font-size: 1.2rem;
    font-weight: 700;
    color: #22223b;
}

.close-btn {
    background: none;
    border: none;
    font-size: 2rem;
    color: #8a8a99;
    cursor: pointer;
}

.modal-body {
    padding: 32px 40px 0 40px;
    overflow-y: auto;
    flex: 1 1 auto;
}

.modal-row {
    display: flex;
    gap: 32px;
    margin-bottom: 24px;
}

.modal-field {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.modal-input {
    margin-top: 6px;
    padding: 8px 12px;
    border: 1.5px solid #dbeafe;
    border-radius: 6px;
    font-size: 1rem;
}

.modal-upload {
    border: 1.5px dashed #dbeafe;
    border-radius: 8px;
    padding: 32px;
    width: 100%;
    min-height: 90px;
    display: flex;
    align-items: center;
    gap: 16px;
    background: #f5f7fa;
    justify-content: center;
    margin-bottom: 16px;
}

.modal-footer {
    display: flex;
    justify-content: flex-end;
    padding: 32px 40px 32px 40px;
}

.switch {
    position: relative;
    display: inline-block;
    width: 44px;
    height: 24px;
    margin-left: 8px;
}
.switch input {
    opacity: 0;
    width: 0;
    height: 0;
}
.slider {
    position: absolute;
    cursor: pointer;
    top: 0; left: 0; right: 0; bottom: 0;
    background: #e3e8f7;
    border-radius: 24px;
    transition: .4s;
}
.switch input:checked + .slider {
    background: linear-gradient(90deg, #4f7df3 0%, #7f9cf5 100%);
}
.slider:before {
    position: absolute;
    content: "";
    height: 18px;
    width: 18px;
    left: 3px;
    bottom: 3px;
    background-color: #fff;
    border-radius: 50%;
    transition: .4s;
    box-shadow: 0 1px 4px rgba(79, 125, 243, 0.12);
}
.switch input:checked + .slider:before {
    transform: translateX(20px);
}
</style>

@code {
    private bool showAddStudentModal = false;

    private void ShowAddStudentModal()
    {
        showAddStudentModal = true;
    }

    private void CloseAddStudentModal()
    {
        showAddStudentModal = false;
    }
}
